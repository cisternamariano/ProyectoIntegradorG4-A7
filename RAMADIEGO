# Repositorio-Grupal-A7-G4
Proyecto integrador del grupo 4 del Aula 7
CREATE DATABASE veterinario;
Use veterinario;
CREATE TABLE dueno(dniDueno INT NOT NULL UNIQUE,
                   Nombre VARCHAR(50),
                   Apellido varchar(50),
                   Telefono varchar(50),
                   Direccion varchar(50),
                   PRIMARY KEY (dniDueno) );
 CREATE TABLE perro(idPerro INT NOT NULL UNIQUE,
                    NombreP VARCHAR(50),
                    fechaNacimiento VARCHAR(50),
                    Sexo VARCHAR(10),
                    dni_du INT,
                    PRIMARY KEY (idPerro),
                    FOREIGN KEY(dni_du) REFERENCES dueno(dniDueno) );
  CREATE TABLE historial(idHistori INT NOT NULL UNIQUE,
                         fecha DATETIME,
                         perro_p INT,
                         descripcion VARCHAR(300),
                         monto FLOAT,
                         PRIMARY KEY(idHistori),
                         FOREIGN KEY(perro_p) REFERENCES perro(idPerro) );
 CREATE TABLE dueno_perro(dni_du1 INT NOT NULL UNIQUE,
                          id_perro1 INT NOT NULL UNIQUE,
                          FOREIGN KEY(dni_du1) REFERENCES dueno(dniDueno),
                          FOREIGN KEY (id_perro1) REFERENCES perro (idPerro) );
                    
CREATE TABLE perro_historial(id_histo1 INT NOT NULL UNIQUE,
                             id_perro2 INT NOT NULL UNIQUE,
                             FOREIGN KEY (id_histo1) REFERENCES historial (idHistori),
                             FOREIGN KEY (id_perro2) REFERENCES perro(idPerro) );
 Use veterinario;    
